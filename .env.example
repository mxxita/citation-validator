# API Keys
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# LLM Configuration
DEFAULT_LLM_PROVIDER=openai  # Options: "openai" or "anthropic"
OPENAI_MODEL=gpt-4o
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-3-small
SIMILARITY_THRESHOLD=0.75

# Processing Limits
MAX_CITATIONS_TO_CHECK=50
MAX_CONCURRENT_REQUESTS=5

# Rate Limiting (requests per second)
OPENAI_RATE_LIMIT=3.0
SEMANTIC_SCHOLAR_RATE_LIMIT=1.0

# Timeouts (seconds)
WEB_REQUEST_TIMEOUT=30
BROWSER_USE_TIMEOUT=60

# Browser Configuration
BROWSER_HEADLESS=true  # Set to "false" for debugging

# Directories
OUTPUT_DIR=output
DATA_DIR=data

# Logging
LOG_LEVEL=INFO
VERBOSE=false
